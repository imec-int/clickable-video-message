offwhite = #F7F7F4
offblack = #333333

*
	margin 0
	padding 0
	list-style none
	text-decoration none
	font-family 'Roboto', sans-serif
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	position relative

html, body
	width 100%
	height 100%

body
	background-color offwhite
	position relative
	color offblack
	font-size 16px

a
	color inherit
	margin 0
	padding 0

.link
	text-decoration underline
.link:hover
	text-decoration none



.content
	position absolute
	top 0px
	bottom 0px
	left 0px
	right 0px
	margin auto
	width 100%
	text-align center
	background-color rgba(0,0,0,0.8)

	video
		position absolute
		top 0px //left, width and height are set by javascript
		pointer-events none

	.overlay
		position absolute
		top 0px //left, width and height are set by javascript
		z-index 99 // doesn't make any difference on mobile
		border 10px solid red //debug

		.play
			color #FFFFFF
			font-size 90px
			top 0px
			bottom 0px
			left 0px
			right 0px

		.yesimage
			position absolute
			bottom 6%
			right 40%
			width 20% //height is set by javascript, equals width in px
			background-image url('/images/yes.png')
			background-size 100% 100%
			cursor pointer
			opacity 0
			transition opacity 1s, background-image 0.2s

		.yesimage.show
			opacity 1

		.yesimage:hover
			background-image url('/images/yes_glow.png')

		.thankyou, .toobad
			font-weight bold
			font-size 20px
			transition opacity 1s
			opacity 0
			color #FFFFFF
			position absolute
			top 0px
			bottom 0px
			left 0px
			right 0px

		.thankyou.show, .toobad.show
			opacity 1

		.choice
			position absolute
			bottom -56px
			left 0px
			width 100%
			opacity 0
			transition opacity 1s
			.yes, .no
				font-weight bold
				cursor pointer
				font-size 20px

			.yes
				color #009640

			.yes:hover, .no:hover
				text-decoration underline

		.choice.show
			opacity 1





// on smartphones:
@media screen and (max-width: 359px)
	body
		.content
			.overlay
				.play
					display none