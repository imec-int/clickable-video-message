offwhite = #F7F7F4
offblack = #333333

*
	margin 0
	padding 0
	list-style none
	text-decoration none
	font-family 'Roboto', sans-serif
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	position relative

html, body
	width 100%
	height 100%

body
	background-color offwhite
	position relative
	color offblack
	font-size 16px

a
	color inherit
	margin 0
	padding 0

.link
	text-decoration underline
.link:hover
	text-decoration none



.wrapper
	position absolute
	top 0px
	bottom 0px
	left 0px
	right 0px
	margin auto
	width 100%
	height 340px
	text-align center


	.blackbox
		background-color rgba(0,0,0,0.8)
		height 100%

		video, .overlayimage
			position absolute
			margin auto
			left 0px
			right 0px
			height 100%
			transition opacity 1s

		.overlayimage
			opacity 0
			transition opacity 1s
		.overlayimage.show
			opacity 1

		.yesimage
			position absolute
			bottom 17%
			right 44%
			width 133px
			height 133px
			background-image url('/images/yes.png')
			background-size 100% 100%
			cursor pointer
			opacity 0
			transition opacity 1s, background-image 0.2s

		.yesimage:hover
			background-image url('/images/yes_glow.png')


		.thankyou, .toobad
			font-weight bold
			font-size 20px
			transition opacity 1s
			opacity 0
			color #FFFFFF
			position absolute
			top 0px
			bottom 0px
			left 0px
			right 0px
			line-height 340px



	.choice
		top 10px
		opacity 0
		transition opacity 1s
		.yes, .no
			font-weight bold
			cursor pointer
			font-size 20px

		.yes
			color #009640

		.yes:hover, .no:hover
			text-decoration underline

body.showchoice
	.wrapper
		.blackbox
			.yesimage
				opacity 1

		.choice
			opacity 1


body.showthankyou
	.wrapper
		.blackbox
			.thankyou
				opacity 1

body.showtoobad
	.wrapper
		.blackbox
			.toobad
				opacity 1


body.hidevideo
	.wrapper
		.blackbox
			video, .overlayimage
				opacity 0






// on smartphones:
@media screen and (max-width: 768px)
	body
		font-size 12px
