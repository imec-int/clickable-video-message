offwhite = #F7F7F4
offblack = #313130


*
	margin 0
	padding 0
	list-style none
	text-decoration none
	font-family 'Roboto', sans-serif
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	position relative

html, body
	width 100%
	height 100%

body
	background-color offwhite
	position relative
	color offblack
	font-size 16px

a
	color inherit
	margin 0
	padding 0

.link
	text-decoration underline
.link:hover
	text-decoration none

.show
	opacity 1 !important

.content
	position absolute
	top 0px
	bottom 0px
	left 0px
	right 0px
	margin auto
	width 100%
	text-align center
	background-color offblack
	opacity 0
	transition opacity 0.3s // hide everything at the start, wait until everything is loaded before showing

	video
		position absolute
		top 0px //left, width and height are set by javascript
		pointer-events none

	.overlay
		position absolute
		top 0px //left, width and height are set by javascript
		z-index 99 // doesn't make any difference on mobile
		// border 10px solid red //debug


		.endimage
			position absolute
			top 0px
			left 0px
			width 100%
			height 100%
			opacity 0
			transition opacity 1s

		.play
			position absolute
			left 50%
			top 50%
			margin-left -35.5px
			margin-top -35.5px
			width 71px
			height 71px
			cursor pointer
			transition opacity 0.5s
			opacity 0.8
		.play.hide
			opacity 0


		.yesimage
			position absolute
			bottom 6%
			right 40%
			width 20% //height is set by javascript, equals width in px
			background-image url('/images/yes.png')
			background-size 100% 100%
			cursor pointer
			opacity 0
			transition opacity 1s, background-image 0.2s

		.yesimage:hover
			background-image url('/images/yes_glow.png')

		.response
			position absolute
			top 0px
			left 0px
			width 100%
			height 100%
			background-color offblack
			text-align center
			color #FFFFFF
			text-shadow 1px 1px #000000
			font-weight bold
			font-size 20px
			opacity 0
			transition opacity 1s
			display table

		.response p
			display table-cell
			vertical-align middle
			text-align center
			opacity 0
			transition opacity 1s

		.choice
			position absolute
			bottom -56px
			left 0px
			width 100%
			opacity 0
			transition opacity 1s
			.yes, .no
				font-weight bold
				cursor pointer
				font-size 20px

			.yes
				color #009640

			.yes:hover, .no:hover
				text-decoration underline





