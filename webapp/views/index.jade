doctype html5
html
	head
		title=title
		meta(charset='utf-8')
		meta(name='viewport', content='user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width')
		meta(name='apple-mobile-web-app-capable', content='yes')
		link(rel='stylesheet', href='stylesheets/style.css')

		script(type='text/javascript', src='//code.jquery.com/jquery.min.js')
		script(type='text/javascript', src='/javascripts/index.js')
	body
		.wrapper
			.blackbox

				.thankyou Bedankt #{name}, tot op mijn verjaardagsfeestje!
				.toobad Kieken, je weet niet wat je mist.


				video(autoplay='autoplay')
					source(src='/video/#{video}', type='video/mp4')

				img.overlayimage(src="/video/#{image}")

				.yesimage

			.choice
				.yes Ja, ik kom af
				.no Helaas, ik kan niet